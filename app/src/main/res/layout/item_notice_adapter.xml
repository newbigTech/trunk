<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/c_transparent_00000000"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/iv_notice"
        android:src="@drawable/ic_notice_new"
        android:layout_width="60dp"
        android:layout_height="40dp"/>
    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/time"
        android:layout_toRightOf="@id/iv_notice"
        android:textSize="15sp"
        android:text="时间：2017/12/12 14;30    "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:singleLine="true"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/iv_notice"
        android:layout_below="@id/time"
        android:id="@+id/message"
        android:textSize="15sp"
        android:text="内容：总部要求所有司机准时回来开大会"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/message"
        android:id="@+id/line1"
        android:background="@color/c_orange_ff8a01"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>