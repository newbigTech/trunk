<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@id/grab_btn_layout"
    android:background="@drawable/main_control_panel_btn_grab_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <TextView
      android:textSize="@dimen/f_54"
      android:id="@id/txt_grab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/main_control_panel_grab"
      android:layout_centerHorizontal="true"
      style="@style/Button.White.XXLarge"/>

  <TextView
      android:textSize="@dimen/font_size_lc_dp"
      android:gravity="center"
      android:id="@id/txt_grab_count_down"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/main_control_panel_grab_count_down"
      android:layout_below="@id/txt_grab"
      android:layout_centerHorizontal="true"
      style="@style/Button.White.Large"/>
</RelativeLayout>